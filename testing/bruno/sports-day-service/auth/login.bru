meta {
  name: login
  type: http
  seq: 1
}

post {
  url: {{serviceUrl}}/api/auth/login
  body: formUrlEncoded
  auth: inherit
}

body:form-urlencoded {
  username: {{username}}
  password: {{password}}
}

script:post-response {
  const accessToken = res.getBody().accessToken;
  bru.setVar('accessToken', accessToken);
}
